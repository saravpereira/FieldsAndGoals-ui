{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-unmodified-loop-condition": "off",
    "react/prop-types": "warn",
    "react/no-unescaped-entities": "warn"
  },
  "globals": {
    "document": "readonly",
    "window": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
